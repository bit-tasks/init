    "package": "ncc build index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "all": "npm run format:write && npm run lint && npm run package"
  },
  "keywords": [],
